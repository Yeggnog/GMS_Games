            <string>/// generate stage and handle progress

// update BG temp
if(BG_temp &lt; 16){
    BG_temp += 1;
}else{
    BG_temp = 0;
}

var test = false;

// advance progress
if(progress_temp &lt; max_progress_temp){
    progress_temp += 1;
}else{
    progress_temp = 0;
    if(progress &lt; max_progress){
        progress += 1;
    if(progress &lt;= 8){
        // start off with a flat surface so there isn't a death loop
        instance_create(view_xview[0]+view_wview[0],view_yview[0]+view_hview[0]-16,obj_Runner_Solid);
    }else{
        for(var i=0; i&lt;=scroll_speed; i++){
            if((progress-i) == next_pit){
                test = true;
            }
        }
        if(test == false){
            instance_create(view_xview[0]+view_wview[0],view_yview[0]+view_hview[0]-16,obj_Runner_Solid);
            if(next_pit &lt; progress){
                // determine next 'pit' position
                next_pit = progress + irandom_range(min(progress+2,max_progress),min(progress+4,max_progress));
            }
        }
    }
    
    // fill accordingly with blocks
    for(var i=0; i&lt;5; i++){
        if((test == false) || i &lt;= 3){
            instance_create(view_xview[0]+view_wview[0],view_yview[0]+16*i,obj_Runner_Block);
        }
    }
    }
}
