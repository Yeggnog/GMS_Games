if(key_left){
    if(x &gt;= 2 &amp;&amp; !place_meeting(x-2,y,obj_Omni_Solid)){
        x -= 2;
    }
}
if(key_right){
    if(x &lt;= room_width-2 &amp;&amp; !place_meeting(x+2,y,obj_Omni_Solid)){
        x += 2;
    }
}
if(key_up){
    if(y &gt;= 2 &amp;&amp; !place_meeting(x,y-2,obj_Omni_Solid)){
        y -= 2;
    }
}
if(key_down){
    if(y &lt;= room_height-2 &amp;&amp; !place_meeting(x,y+2,obj_Omni_Solid)){
        y += 2;
    }
}
if(key_A_held){
    if(shot_break == 0){
        // shoot
        shot_break = 4;
        var bul = instance_create(x,y,obj_Omni_Bullet);
        bul.sprite_index = spr_Drago_Bullet;
        bul.ancestor = id;
        bul.dmg = 1;
        bul.y_spd = -8;
