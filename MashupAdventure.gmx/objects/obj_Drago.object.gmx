        bul.part_range[1] = 4;*/
    }
}
if(key_B){
    if(dash_timer == 0){
        // dash
        dash_timer = 12;
        sprite_index = spr_Drago_Dash;
    }
}

// updates

if(dash_timer &gt; 0){
    dash_timer -= 1;
    if(dash_timer &gt; 4){
        if(y &gt;= 6 &amp;&amp; !place_meeting(x,y-6,obj_Omni_Solid)){
            y -= 6;
        }
    }else{
        if(y &lt;= room_height-4 &amp;&amp; !place_meeting(x,y+4,obj_Omni_Solid)){
            y += 4;
        }
    }
    if(dash_frame &lt; 3){
        dash_frame += 1;
    }else{
        dash_frame = 0;
    }
}else{
    sprite_index = spr_Drago;
}

if(shot_break &gt; 0){
    shot_break -= 1;
}

shots_on_screen = 0;
